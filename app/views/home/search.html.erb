<% if !@foods.empty? %>
  <table class="table table-striped table-foods" id="table-foods-menu">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr class="food" data-url="<%= food_path(food) %>">
          <td><%= food.name %></td>
          <td><%= food.price %></td>
          <td><%= image_tag(food.show_image()) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<% content_for :javascript_includes do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#table-foods-menu').DataTable({
        "bFilter": false,
        // "bPaginate": false,
        "bLengthChange": false,
        "pageLength": 5,
        "bInfo" : false
      });
      $('#table-foods-menu tbody').on( 'click', 'tr', function () {
        var url = $(this).data('url');
        window.location.href=url;
      });
    });
  </script>
<% end %>
