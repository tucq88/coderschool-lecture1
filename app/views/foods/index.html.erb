<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header clearfix">
    <h2 class="pull-xs-left">Foods</h2>
    <div class="pull-xs-right">
      <%= link_to 'New Food', new_food_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="card-block">
    <table class="table table-striped table-foods">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Menu</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr class="food">
            <td><%= food.name %></td>
            <td><%= food.description %></td>
            <td><%= food.price %></td>
            <td><%= food.menu.name %></td>
            <td><%= image_tag(food.show_image()) %></td>
            <td><%= link_to 'Show', food %></td>
            <td><%= link_to 'Edit', edit_food_path(food) %></td>
            <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
